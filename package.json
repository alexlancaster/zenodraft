{
    "author": "Jurriaan H. Spaaks",
    "bin": {
        "zenodraft": "bin/index.js"
    },
    "bugs": {
        "url": "https://github.com/zenodraft/zenodraft/issues"
    },
    "dependencies": {
        "commander": "^7.2.0",
        "dotenv": "^10.0.0",
        "mime-types": "^2.1.31",
        "node-fetch": "^2.6.1"
    },
    "description": "CLI to manage depositions on Zenodo and Zenodo Sandbox",
    "devDependencies": {
        "@types/mime-types": "^2.1.0",
        "@types/node": "^15.6.1",
        "@types/node-fetch": "^2.5.10",
        "typescript": "^4.3.2"
    },
    "engines": {
        "node": ">=12.16.0",
        "npm": ">=6.13.4"
    },
    "files": [
        "dist"
    ],
    "homepage": "https://github.com/zenodraft/zenodraft",
    "keywords": [
        "cli",
        "zenodo"
    ],
    "license": "Apache-2.0",
    "main": "dist/zenodraft.js",
    "module": "dist/zenodraft.mjs",
    "name": "zenodraft",
    "repository": {
        "type": "git",
        "url": "https://github.com/zenodraft/zenodraft.git"
    },
    "scripts": {
        "all": "npm run clean && npm run build && npm pack",
        "build": "npm run mjs && npm run cjs",
        "cjs": "tsc --module commonjs -p tsconfig.json",
        "clean": "rm -rf dist/* dist/.zenodo.json.empty",
        "copy-assets": "cp assets/.zenodo.json.empty dist/",
        "postbuild": "npm run copy-assets",
        "mjs": "tsc --module es6 --declaration -p tsconfig.json && for filename in `find dist -type f -name *.js`; do mv -- \"$filename\" \"${filename%.js}.mjs\"; done"
    },
    "types": "dist/zenodraft.d.ts",
    "version": "0.6.0"
}
